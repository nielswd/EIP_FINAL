<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/icons" />
            <gradient android:angle="-90" android:startColor="@color/icons" android:endColor="@color/icons"  />
            <solid android:color="@color/icons" />
            <size android:width="120dp" android:height="120dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="60dip" />
            <stroke android:width="2dip" android:color="@color/icons" />
            <solid android:color="@color/icons"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="60dip" />
            <stroke android:width="2dip" android:color="@color/icons" />
        </shape>
    </item>

</selector>