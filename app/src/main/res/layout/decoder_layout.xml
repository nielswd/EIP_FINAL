<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00547c">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.dlazaro66.qrcodereaderview.QRCodeReaderView
        android:id="@+id/qrdecoderview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
                android:layout_marginBottom="120dp"
                android:layout_marginTop="200dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="32dp"
                android:layout_marginBottom="30dp"
                android:layout_alignBottom="@+id/qrdecoderview"
                android:layout_centerHorizontal="true"
                android:background="@android:color/white"/>

            <View
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_margin="32dp"
                android:layout_marginBottom="30dp"
                android:background="@android:color/white"
                android:layout_alignBottom="@+id/qrdecoderview"
                />
            <View
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_margin="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="30dp"
                android:background="@android:color/white"
                android:layout_alignBottom="@+id/qrdecoderview"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="32dp"
                android:layout_marginBottom="30dp"
                android:layout_alignTop="@+id/qrdecoderview"
                android:layout_centerHorizontal="true"
                android:background="@android:color/white"/>

            <View
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_margin="32dp"
                android:layout_marginBottom="30dp"
                android:background="@android:color/white"
                android:layout_alignTop="@+id/qrdecoderview"
                />
            <View
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_margin="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="30dp"
                android:background="@android:color/white"
                android:layout_alignTop="@+id/qrdecoderview"
                />

            <FrameLayout
                android:background="@drawable/circular_frame"
                android:id="@+id/framelayout_barcode"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:padding="5dip"
                android:layout_marginBottom="21dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp">



                <ImageView
                    android:id="@+id/imageview2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_write_login"/>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/image_first2"
                    android:orientation="vertical"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_edit"
                    app:backgroundTint="@color/secondary_text"
                    android:layout_marginTop="10dp"
                    app:fab_size="mini"
                    android:layout_gravity="bottom|center"/>
            </FrameLayout>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/logo"
                android:id="@+id/imageView4"
                android:layout_marginTop="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/groom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groom"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:layout_alignBottom="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="13dp" />

            <TextView
                android:id="@+id/smart_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:layout_alignTop="@+id/imageView4"
                android:layout_toLeftOf="@+id/imageView4"
                android:layout_toStartOf="@+id/imageView4"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:layout_alignBottom="@+id/qrdecoderview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="visible"
                    android:indeterminateDrawable="@drawable/progress"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ProgressBar>
            </RelativeLayout>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_back_iphone"
                android:layout_marginBottom="33dp"
                android:layout_alignBottom="@+id/framelayout_barcode" />
        </RelativeLayout>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>