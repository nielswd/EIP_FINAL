<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#00547c">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/logo"
            android:id="@+id/imageView4"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <FrameLayout
            android:id="@+id/framelayout_barcode"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:padding="5dip"
            android:layout_alignTop="@+id/framelayout_enter_data"
            android:layout_alignRight="@+id/smart_text"
            android:layout_alignEnd="@+id/smart_text">



            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_barcode"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/image_first2"
                android:orientation="vertical"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_take_picture"
                app:backgroundTint="@color/secondary_text"
                android:layout_marginTop="10dp"
                app:fab_size="normal"
                android:layout_gravity="bottom|center"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/framelayout_enter_data"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:padding="5dip"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/groom_text"
            android:layout_alignStart="@+id/groom_text">



            <ImageView
                android:id="@+id/imageview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_write_login"/>
            <android.support.design.widget.FloatingActionButton
                android:clickable="true"
                android:id="@+id/image_first"
                android:orientation="vertical"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_edit"
                app:backgroundTint="@color/secondary_text"
                android:layout_marginTop="10dp"
                app:fab_size="normal"
                android:layout_gravity="bottom|center"/>
        </FrameLayout>

        <TextView
            android:id="@+id/groom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Groom"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="13dp" />

        <TextView
            android:id="@+id/smart_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/divider_view"
            android:layout_width="2dp"
            android:layout_height="100dp"
            android:background="@android:color/white"
            android:layout_alignBottom="@+id/framelayout_enter_data"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>